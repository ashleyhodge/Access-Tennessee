<form class="signup-form" id="sign-up">
  <div class="container-login100">
    <div class="wrap-login10">
      <h1> 
        <ul class="profile-header-tab nav nav-tabs">
          <button onclick="toggleSignup()">User Sign Up </button>
          <button onclick="toggleBSignup()">Business Sign Up</button>
        </ul>
      </h1>
    <p class="p-signup">Please fill in this form to create an account.</p>
    <hr>
      <div>
        <label for="first_name"><b>First Name</b></label>
        <input type="text" placeholder="Enter first name" id="firstname-signup" />
      </div>
      <div>
        <label for="last_name"><b>Last Name</b></label>
        <input type="text" placeholder="Enter last name" id="lastname-signup" />
      </div>
      <div>
        <label for="username"><b>Username</b></label>
        <input type="text" id="username-signup" placeholder="Enter username" />
      </div>
      
      <div>
        <label for="email"><b>Email</b></label>
        <input type="text" id="email-signup" placeholder="Enter Email" />
      </div>
      <div>
        <label for="password"><b>Password</b></label>
        <input type="password" id="password-signup" placeholder="Enter Password"/>
      </div>
      <div>
        <label for="description"><b>Tell us about yourself: </b></label>
        <input type="text" id="description-signup" placeholder="Enter Bio" />
      </div>
      <div>
        <label for="impairment"><b>Impairment</b></label>
        <input type="text" id="impairment-signup" placeholder="Enter impairment" not required />
      </div> 
      <label for="picture"><b>Select Profile Picture:</b></label>
          <input id="image-signup" type="file" name="profile_photo" placeholder="Photo" required="" capture> 
      <div>
        <button type="submit">Signup</button>
      </div>
    </div>
  </div>
</form>
